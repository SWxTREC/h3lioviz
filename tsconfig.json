{
    "compileOnSave": false,
    "compilerOptions": {
      "baseUrl": "./",
      "outDir": "./dist/out-tsc",
      "sourceMap": true,
      "esModuleInterop": true,
      "declaration": false,
      "module": "es2020",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "importHelpers": true,
      "skipLibCheck": true,
      "target": "ES2022",
      "typeRoots": [
        "node_modules/@types"
      ],
      "lib": [
        "es2018",
        "dom"
      ],
      "useDefineForClassFields": false
    },
    "exclude": [
        "node_modules"
    ],
    "angularCompilerOptions": {
        "strictTemplates": true
    }
}
